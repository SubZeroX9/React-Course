{
  "name": "react-app",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "tags": ["type:app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist"],
      "options": {
        "command": "tsc -b && vite build"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint ."
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview"
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test"
      }
    }
  }
}
